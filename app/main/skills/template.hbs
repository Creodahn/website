<div class="background-skill fixed-height">
  {{#if isAuthenticated}}
    <div class="bottom-spacer flex-row right">
      <button id="modal-toggle" type="button" class="btn" data-toggle="modal" data-target="#education-editor">
        Edit
      </button>
    </div>
  {{/if}}

  {{skill-chart
    chart-id="skills"
    model=sortedSkills
  }}

  {{#if isAuthenticated}}
    {{#modal-window
      close-on-action=false
      flex-modal=true
      modal-id="education-editor"
      modal-title="Education Editor"
      show-footer=false
    }}
      <div class="flex-center flex-display flex-row">
        <div class="flex-display flex-spacer">
          {{text-input
            label="Skill Name"
            value=selected.name
          }}
        </div>
        <div class="flex-display flex-spacer">
          {{text-input
            label="Years"
            value=selected.years
          }}
        </div>
        <button {{action "save"}} type="button" class="btn btn-primary flex-display">
          Save
        </button>
      </div>
      <table class="base-table table table-hover">
        <thead>
          <tr>
            <th>Skill</th>
            <th>Years</th>
            <th class="center">Remove</th>
          </tr>
        </thead>
        <tbody>
          {{#each sortedSkills as |skill|}}
            <tr class="clickable">
              <td {{action "select" skill}}>
                {{skill.name}}
              </td>
              <td {{action "select" skill}}>
                {{skill.years}}
              </td>
              <td class="center">
                <div {{action "remove" skill}} class="glyphicon glyphicon-remove"></div>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{/modal-window}}
  {{/if}}
</div>
