{{#if isAuthenticated}}
  <div class="flex-row right">
    <button type="button" class="btn" data-toggle="modal" data-target="#profile-editor">
      Edit
    </button>
  </div>
{{/if}}
<div class="flex-layout-row">
  {{about-me
    model=model
  }}
  {{contact-me
    model=model
  }}
</div>

{{#if isAuthenticated}}
  {{#modal-window
    close-on-action=true
    flex-modal=true
    footer-button-caption="Save"
    footer-button-type="submit"
    modal-id="profile-editor"
    modal-title="Profile Editor"
    show-footer=true
    formAction="save"
  }}
    <div class="form-group">
      <label>Full Name</label>
      {{input
        class="form-control"
        placeholder="Name"
        value=model.name
      }}
    </div>

    <div class="form-group">
      <label>Title</label>
      {{input
        class="form-control"
        placeholder="Title"
        value=model.title
      }}
    </div>

    <div class="form-group">
      <label>Email</label>
      {{input
        class="form-control"
        placeholder="Email"
        value=model.email
      }}
    </div>

    <div class="form-group">
      <label>LinkedIn Profile URL</label>
      {{input
        class="form-control"
        placeholder=""
        value=model.linkedin
      }}
    </div>

    <div class="form-group">
      <label>Resume URL</label>
      {{input
        class="form-control"
        placeholder=""
        value=model.resumeUrl
      }}
    </div>

    <div class="form-group">
      <label>Location</label>
      {{input
        class="form-control"
        placeholder="Location"
        value=model.location
      }}
    </div>

    {{datetime-picker
      format="MM/DD/YYYY"
      label="Birth Date"
      value=selected.birthDate
    }}
  {{/modal-window}}
{{/if}}
