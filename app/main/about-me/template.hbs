{{#if isAuthenticated}}
  <div class="flex-row right">
    <button type="button" class="btn" data-toggle="modal" data-target="#profile-editor">
      Edit
    </button>
  </div>
{{/if}}
<div class="flex-layout-row">
  {{about-me
    model=model
  }}
  {{contact-me
    model=model
  }}
</div>

{{#if isAuthenticated}}
  {{#modal-window
    close-on-action=true
    flex-modal=true
    footer-button-caption="Save"
    footer-button-type="submit"
    modal-id="profile-editor"
    modal-title="Profile Editor"
    show-footer=true
    formAction="save"
  }}
    {{text-input
      label="Full Name"
      placeholder="Name"
      value=model.name
    }}

    {{text-input
      label="Title"
      placeholder="Title"
      value=model.title
    }}

    {{filestack-upload
      label="Upload Profile Picture"
      options=profilePickOptions

      upload="uploadProfilePic"
    }}

    {{text-input
      label="Email"
      placeholder="Email"
      value=model.email
    }}

    {{text-input
      label="LinkedIn Profile URL"
      placeholder=""
      value=model.linkedin
    }}

    {{filestack-upload
      label="Upload Resume"
      options=resumePickOptions

      upload="uploadResume"
    }}

    {{text-input
      label="Location"
      placeholder="Location"
      value=model.location
    }}

    {{datetime-picker
      format="MM/DD/YYYY"
      label="Birth Date"
      value=selected.birthDate
    }}
  {{/modal-window}}
{{/if}}
