{{#if isAuthenticated}}
  <div class="bottom-spacer flex-row right">
    <button id="modal-toggle" type="button" class="btn" data-toggle="modal" data-target="#experience-editor">
      Edit
    </button>
  </div>
{{/if}}

{{#each sortedWork as |experience|}}
  {{work-experience
    isAuthenticated=isAuthenticated
    model=experience
    select="select"
  }}
{{/each}}

{{#if isAuthenticated}}
  {{#modal-window
    close-on-action=true
    flex-modal=true
    footer-button-caption="Save"
    footer-button-type="submit"
    modal-id="experience-editor"
    modal-title="Work Experience Editor"
    show-footer=true
    cancelAction="cancel"
    formAction="save"
  }}
    {{text-input
      label="Company Name"
      value=selected.company
    }}

    {{text-input
      label="Position"
      value=selected.position
    }}

    {{text-input
      label="Company URL"
      value=selected.url
    }}

    {{datetime-picker
      format="MM/YYYY"
      label="Date Started"
      value=selected.started
    }}

    {{datetime-picker
      format="MM/YYYY"
      label="Date Ended"
      value=selected.ended
    }}

    {{wysiwyg-editor
      content=selected.description
    }}
  {{/modal-window}}
{{/if}}
