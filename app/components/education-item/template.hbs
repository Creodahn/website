<article class="education-item">
  <div class="col-xs-12">
    <div class="bold title">
      {{model.schoolName}}
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4">
      <div class="sub-title">
        {{moment-format model.started "MMMM YYYY"}} to {{moment-format model.graduated "MMMM YYYY"}}
      </div>
      {{#if isAuthenticated}}
        <div class="center">
          <button {{action "select"}} class="btn">Edit</button>
        </div>
      {{/if}}
    </div>
    <div class="col-xs-8">
      {{{model.description}}}
    </div>
  </div>
</article>
