<article class="ui card">
  <div class="content">
    <h2 class="header">
      {{#if model.url}}
        <a href={{model.url}} target="_blank">{{model.name}}</a>
      {{else}}
        {{model.name}}
      {{/if}}
    </h2>
    <div class="meta">
      <span class="date">
        {{moment-format model.started "MMMM YYYY"}} to
        {{#if model.ended}}
          {{moment-format model.ended "MMMM YYYY"}}
        {{else}}
          Present
        {{/if}}
      </span>
    </div>
  </div>
  <figure class="image">
    {{#if model.images}}
      {{photo-stack
        modal-id=modalId
        model=model.images
        title=title
        selectImages="selectImages"
      }}
    {{/if}}
  </figure>
  <div class="content">
    <div class="description">
      {{{model.description}}}
      {{#if model.skills}}
        <div>
          <h3>Technologies Used in this Project</h3>
          <ul>
            {{#each model.skills as |skill|}}
              <li>{{skill.name}}</li>
            {{/each}}
          </ul>
        </div>
      {{/if}}
    </div>
  </div>
</article>
